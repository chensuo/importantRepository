// JavaScript Document

$(function(){
                    $(".upTop").hover(
                            function(){
                                $(".backTopTitle").animate({
                                    opacity: 'show'
                                }, 300);
                            },
                            function(){
                                $(".backTopTitle").animate({
                                    opacity: 'hide'
                                }, 300);
                            }
                    );
                    $(".absoluteHelp").hover(
                            function(){
                                $(".absoluteHelpalt").animate({
                                    opacity: 'show'
                                }, 300);
                            },
                            function(){
                                $(".absoluteHelpalt").animate({
                                    opacity: 'hide'
                                }, 300);
                            }
                    );
                    $(".absoluteHelp2").hover(
                            function(){
                                $(".absoluteHelp2alt").animate({
                                    opacity: 'show'
                                }, 300);
                            },
                            function(){
                                $(".absoluteHelp2alt").animate({
                                    opacity: 'hide'
                                }, 300);
                            }
                    );
                    $(".absoluteHelp3").hover(
                            function(){
                                $(".absoluteHelp3alt").animate({
                                    opacity: 'show'
                                }, 300);
                            },
                            function(){
                                $(".absoluteHelp3alt").animate({
                                    opacity: 'hide'
                                }, 300);
                            }
                    );
                    $(".phone").hover(
                    		function(){
                    			$(".toscan").animate({
                                    opacity: 'show'
                                }, 300);
                    		},
                    		function(){
                    			$(".toscan").animate({
                                    opacity: 'hide'
                                }, 300);
                    		}
                    );
                });